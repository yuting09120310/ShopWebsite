@model AlexBlogMVC.FrontEnd.ViewModel.ShopPageViewModel
@using AlexBlogMVC.Areas.BackEnd.Models

@{
    var breadcrumbDict = new Dictionary<string, string[]> { { "購物頁", new string[] { "Alex前台", "購物頁" } } };
}

@Html.Partial("_FrontEndPageTitlePartial", breadcrumbDict)

<!--Shop Page-->
    <div class="sidebar-page-container shop-page">
        <div class="outer-container shop-container">
            <div class="row clearfix">
                
                
                <!--Content Side-->	
                <div class="content-side pull-right col-lg-9 col-md-8 col-sm-12 col-xs-12">
                    
                    <!--Products Section-->
                    <section class="products-section padd-left-20">
                        <div class="clearfix">

                            @{
                                foreach(SingleProductViewModel product in Model.ListProductViewModels)
                                {
                                    <!--Product item-->
                                    <div class="product-item col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="inner-box">
                                            <figure class="image-box">
                                                <a asp-controller="ShopPage" asp-action="Detail" asp-route-id="@product.ProductId"><img src="@Url.Content("~/uploads/Product/" + product.ProductImg1)" alt=""></a>
                                                <div class="options">
                                                    <a href="@Url.Content("~/uploads/Product/" + product.ProductImg1)" class="lightbox-image" title="Image Caption Here"><span class="icon flaticon-cross"></span></a>
                                                    <a href="shop-single.html" class="add-cart-btn"><span class="icon fa fa-shopping-cart"></span></a>
                                                    <a href="#" class="add-fav-btn"><span class="icon fa fa-heart-o"></span></a>
                                                </div>
                                            </figure>
                                            <div class="lower-content">
                                                <h3><a asp-controller="ShopPage" asp-action="Detail" asp-route-id="@product.ProductId">@product.Title</a></h3>
                                                <div class="ratings"><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span></div>
                                                <div class="price">$ @product.Price</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </section>
    
                    <!-- Styled Pagination -->
                    <div class="styled-pagination text-center padd-top-30">
                        <ul>
                        	<li><a class="prev" href="#"><span class="fa fa-angle-double-left"></span>&ensp;Prev</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#" class="active">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a class="next" href="#">Next&ensp;<span class="fa fa-angle-double-right"></span></a></li>
                        </ul>
                    </div>
                
                    
                </div>
                <!--Content Side-->
                
                <!--Sidebar-->	
                <div class="col-lg-3 pull-left col-md-4 col-sm-6 col-xs-12">
                    <aside class="sidebar">
                        
                        
                        <!-- Recent Articles -->
                        <div class="sidebar-widget shop-widget boxed-widget links-widget wow fadeInUp" data-wow-delay="0ms" data-wow-duration="1500ms">
                            <div class="widget-title"><h2>商品類別</h2></div>
                            
                            <ul class="list">
                                @{
                                    foreach(ProductClass productClass in Model.ListproductClass)
                                    {
                                        var url = Url.Action("Index", "ShopPage", new { ClassType = productClass.ProductClassNum });
                                        <li><a href="@url"><div class="clearfix"><span class="pull-left">@productClass.ProductClassName</span> <span class="pull-right fa fa-arrow-right"></span></div></a></li>
                                    }
                                }
                            </ul>
                            
                        </div>
                        
                        
                        <!-- Popular Posts -->
                        <div class="sidebar-widget shop-widget boxed-widget shop-posts wow fadeInUp" data-wow-delay="0ms" data-wow-duration="1500ms">
                            <div class="widget-title"><h2>TOP SALES</h2></div>
                            
                            <article class="post">
                            	<figure class="post-thumb"><a href="#"><img src="~/FrontEnd/images/resource/products/thumb-1.jpg" alt=""></a></figure>
                                <h4><a href="#">Baby Panda</a></h4>
                                <div class="rating"><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star-half-empty"></span></div>
                                <div class="item-price">$ 35.00 <span class="strike-through">$75.00</span></div>
                            </article>
                            
                            <article class="post">
                            	<figure class="post-thumb"><a href="#"><img src="~/FrontEnd/images/resource/products/thumb-2.jpg" alt=""></a></figure>
                                <h4><a href="#">Black Widow</a></h4>
                                <div class="rating"><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star-half-empty"></span></div>
                                <div class="item-price">$ 35.00 <span class="strike-through">$75.00</span></div>
                            </article>
                            
                            <article class="post">
                            	<figure class="post-thumb"><a href="#"><img src="~/FrontEnd/images/resource/products/thumb-3.jpg" alt=""></a></figure>
                                <h4><a href="#">Bumblebee</a></h4>
                                <div class="rating"><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star"></span><span class="star fa fa-star-half-empty"></span></div>
                                <div class="item-price">$ 35.00 <span class="strike-through">$75.00</span></div>
                            </article>
                            
                        </div>
                        
                                
                    </aside>
                </div>
                <!--Sidebar-->  
                
                
            </div>
        </div>
    </div>