@model AlexBlogMVC.FrontEnd.ViewModel.NewsPageViewModel

@{
    ViewData["Title"] = @Model.Title;
}



<section class="news-detail-section">
    <div class="auto-container">

        <div class="content-container">
            <div class="share-links">
                <a href="#" class="facebook-share"><span class="fa fa-facebook-f"></span> Facebook</a>
                <a href="#" class="twitter-share"><span class="fa fa-twitter"></span> Twitter</a>
                <a href="#" class="instagram-share"><span class="fa fa-instagram"></span> Instagram</a>
                <a href="#" class="pinterest-share"><span class="fa fa-pinterest-p"></span> Pinterest</a>
            </div>

            <h2 class="post-title">@Model.Title</h2>
            <div class="info"><a href="#" class="cat-name">@Model.NewsTypeName</a>     <span class="date">@Model.CreateTime</span></div>

            <div class="content">

                @Html.Raw(Model.contxt)

            </div>
        </div>

        <!--Post Tags-->
        <div class="post-tags">
            <strong>TAGS : </strong>
            <a href="#">Business</a>
            <a href="#">Article</a>
            <a href="#">Blog</a>
            <a href="#">Creative</a>
        </div>

        <!--Comments Container-->
        <div class="comments-container">
            <div class="big-title">3 Comments</div>
            <div class="comments-area">

                <!--Comment Box-->
                <div class="comment-box">
                    <div class="inner-box">
                        <figure class="comment-thumb"><img src="~/FrontEnd/images/resource/author-thumb-1.jpg" alt=""></figure>
                        <h3>Tahira Tuzzohora</h3>
                        <div class="time">2 hours ago</div>
                        <div class="text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</div>
                        <div class="links">
                            <a href="#" class="theme-btn normal-link"><span class="fa fa-heart-o"></span>  Like</a>
                            <a href="#" class="theme-btn normal-link"><span class="fa fa-reply"></span>  Reply</a>
                        </div>
                    </div>
                </div>

                <!--Comment Box-->
                <div class="comment-box reply-comment">
                    <div class="inner-box">
                        <figure class="comment-thumb"><img src="~/FrontEnd/images/resource/author-thumb-2.jpg" alt=""></figure>
                        <h3>Hasib Sharif</h3>
                        <div class="time">2 hours ago</div>
                        <div class="text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</div>
                        <div class="links">
                            <a href="#" class="theme-btn normal-link"><span class="fa fa-heart-o"></span>  Like</a>
                            <a href="#" class="theme-btn normal-link"><span class="fa fa-reply"></span>  Reply</a>
                        </div>
                    </div>
                </div>

                <!--Comment Box-->
                <div class="comment-box">
                    <div class="inner-box">
                        <figure class="comment-thumb"><img src="~/FrontEnd/images/resource/author-thumb-1.jpg" alt=""></figure>
                        <h3>Tahira Tuzzohora</h3>
                        <div class="time">2 hours ago</div>
                        <div class="text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</div>
                        <div class="links">
                            <a href="#" class="theme-btn normal-link"><span class="fa fa-heart-o"></span>  Like</a>
                            <a href="#" class="theme-btn normal-link"><span class="fa fa-reply"></span>  Reply</a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="big-title">Leave a Comment</div>
            <!--Reply Form-->
            <div class="reply-form">

                <form method="post" asp-action="Comments">
                    <input type="hidden" asp-for="NewsId" />
                    <div class="row clearfix">
                        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <input type="text" name="Id" value="" placeholder="Your Name" id="UserName">
                        </div>
                        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <input type="email" name="email" value="" placeholder="Your Email" id="Email">
                        </div>
                        <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <textarea name="message" placeholder="Your Message.." id="Message"></textarea>
                        </div>

                        <div class="form-group text-center col-lg-12 col-md-6 col-sm-12 col-xs-12">
                            <div class="padd-top-20"><button type="submit" class="theme-btn">Send Now</button></div>
                        </div>
                    </div>

                </form>
            </div>
        </div>


    </div>
</section>